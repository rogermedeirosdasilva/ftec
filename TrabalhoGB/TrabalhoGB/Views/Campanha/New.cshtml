@model List<TrabalhoGB.Dominio.Campanha>

@{
    ViewBag.Title = "Nova Campanha";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";
}

@section JSDocumentReady {
    $("#m-cad").addClass("active");
    $("#m-cad-camp").addClass("active");
}

<div id="content" class="content">
    <ol class="breadcrumb pull-right">
        <li><a href="@Url.Content("~/")">Dashboard</a></li>
        <li><a href="@Url.Content("~/Campanha")">Campanhas</a></li>
        <li>@ViewBag.Title</li>
    </ol>

    <h1 class="page-header">@ViewBag.Title <small>Inclusão</small></h1>

    <div class="profile-container">
        <form class="form-actions" id="form" data-parsley-validate>
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="nome" class="control-label col-md-2">Nome</label>
                    <div class="col-md-6">
                        <input type="text" class="form-control input-lg" id="nome" name="nome" placeholder="Nome da Campanha" maxlength="100" required value="">
                    </div>
                </div>

                <div class="form-group">
                    <label for="descricao" class="control-label col-md-2">Descrição</label>
                    <div class="col-md-6">
                        <textarea class="form-control input-lg" id="descricao" name="descricao" placeholder="Descrição" maxlength="1000" rows="5" required>
                        </textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label for="afinidade" class="control-label col-md-2">Afinidade</label>
                    <div class="col-md-6">
                        <select name="afinidade" id="afinidade" class="form-control input-lg">
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="DataInicio" class="control-label col-md-2">Início</label>
                    <div class="col-md-2">
                        <input type="date" name="DataInicio" id="DataInicio" class="form-control input-lg"/>
                    </div>

                    <label for="DataTermino" class="control-label col-md-2">Término</label>
                    <div class="col-md-2">
                        <input type="date" name="DataTermino" id="DataTermino" class="form-control input-lg" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <input type="button" value="Salvar" class="btn btn-primary" id="btnSalvar" />
                        <input type="button" value="Cancelar" class="btn btn-default" id="btnCancelar" onclick="history.back();" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>