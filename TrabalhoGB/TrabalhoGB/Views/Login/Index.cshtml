@{
    Layout = null;
}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="pt-br">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>Projeto Ajudar - Identificação</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="@Url.Content("~/assets/plugins/jquery-ui/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/assets/plugins/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/assets/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Assets/plugins/parsley/src/parsley.css")" rel="stylesheet" />
    <link href="@Url.Content("~/assets/css/animate.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/assets/css/style.css")" rel="stylesheet" )" />
    <link href="@Url.Content("~/assets/css/style-responsive.css")" rel="stylesheet" />
    <link href="@Url.Content("~/assets/css/theme/blue.min.css")" rel="stylesheet" id="theme" />
    <link href="@Url.Content("~/Assets/css/PA.css?versao=1.0")" rel="stylesheet" />
    <!-- ================== END BASE CSS STYLE ================== -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="@Url.Content("~/assets/plugins/pace/pace.min.js")"></script>
    <!-- ================== END BASE JS ================== -->
</head>
<body class="pace-top">
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade in"><span class="spinner"></span></div>
    <!-- end #page-loader -->

    <div class="login-cover">
        <div class="login-cover-image fullscreen-wall"></div>
        <div class="login-cover-bg"></div>
    </div>
    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin login -->
        <div class="login login-v2" data-pageload-addclass="animated fadeIn">
            <!-- begin brand -->
            <div class="login-header">
                <div class="brand">
                    <img class="ms-logo-60" src="@Url.Content("~/Assets/img/voluntariado_logo.jpg")">
                    PROJETO AJUDAR
                </div>
                <div class="icon">
                    <i class="fa fa-sign-in"></i>
                </div>
            </div>
            <!-- end brand -->
            <div class="login-content">
                <div id="ms-alerta"></div>

                <form class="margin-bottom-0" data-parsley-validate>
                    <input type="hidden" id="ms-returnurl" value="@ViewBag.ReturnUrl" />
                    <div class="form-group m-b-20">
                        <input type="text" class="form-control input-lg" id="email" placeholder="Usuário" required data-parsley-trigger="change" />
                    </div>
                    <div class="form-group m-b-20">
                        <input type="password" class="form-control input-lg" id="senha" placeholder="Senha" required />
                    </div>
                    <div class="checkbox m-b-20">
                        <label>
                            <input type="checkbox" id="ms-cb-manterconectado" /> Lembrar
                        </label>
                    </div>
                    <div class="login-buttons">
                        <button type="button" id="ms-bt-login" class="btn btn-primary btn-block btn-lg">Entrar</button>
                    </div>
                    <!--
                    <div class="m-t-20">
                        Esqueceu a Senha? Clique <a href="@Url.Content("~/Usuario/Redefinir")">aqui</a> para redefinir sua senha.
                    </div>
                        -->
                    <div class="m-t-20 text-center">
                        <a href="#">Versão 1.0</a>
                    </div>

                    <div class="cadastro-content">
                        <div class="row">
                            <div><h3 class="text-white text-center">CADASTRE-SE</h3></div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <a class="btn btn-primary btn-block btn-lg" href="@Url.Content("~/Pessoa")" role="button">VOLUNTÁRIO</a>
                            </div>
                            <div class="col-md-6">
                                <a class="btn btn-primary btn-block btn-lg" href="@Url.Content("~/Pessoa/ONG")" role="button">ONG</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- end login -->
    </div>
    <!-- end page container -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="@Url.Content("~/assets/plugins/jquery/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/jquery/jquery-migrate-1.1.0.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/jquery-ui/ui/minified/jquery-ui.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/bootstrap/js/bootstrap.min.js")"></script>
    <!--[if lt IE 9]>
        <script src="@Url.Content("~/assets/crossbrowserjs/html5shiv.js")"></script>
        <script src="@Url.Content("~/assets/crossbrowserjs/respond.min.js")"></script>
        <script src="@Url.Content("~/assets/crossbrowserjs/excanvas.min.js")"></script>
    <![endif]-->
    <script src="@Url.Content("~/assets/plugins/slimscroll/jquery.slimscroll.min.js")"></script>
    <script src="@Url.Content("~/Assets/plugins/jquery-cookie/jquery.cookie.js")"></script>
    <script src="@Url.Content("~/Assets/plugins/parsley/dist/parsley.js")"></script>
    <script src="@Url.Content("~/Assets/plugins/parsley/src/i18n/pt-br.js")"></script>
    <!-- ================== END BASE JS ================== -->
    <!-- ================== BEGIN PAGE LEVEL JS ================== -->
    <script src="@Url.Content("~/assets/js/apps.js")"></script>
    <script src="@Url.Content("~/Scripts/PA.Funcoes.js")"></script>
    <script src="@Url.Content("~/Scripts/PA.Usuario.js")"></script>
    <!-- ================== END PAGE LEVEL JS ================== -->

    <script>
        $(document).ready(function () {
            App.init();
        });
    </script>
</body>
</html>